# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h,cpp,hpp,js}]
indent_style = tab
indent_size = tab
tab_width = 4
max_line_length = 120

[Makefile]
indent_style = tab
indent_size = tab
tab_width = 4

[*.md]
trim_trailing_whitespace = false
